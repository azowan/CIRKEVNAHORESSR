@inherits ContactFormBase

<h2>Napiš nám</h2>

<form name="contactForm" id="contactForm" method="post" action="" autocomplete="off">
    <fieldset>
        <div class="form-field">
            <input name="cEmail" id="cEmail" class="h-full-width h-remove-bottom" placeholder="Tvůj email" value="" type="text">
        </div>

        <div class="message form-field">
            <textarea name="cMessage" id="cMessage" class="h-full-width h-remove-bottom" placeholder="Zpráva"></textarea>
        </div>

        <br>

        <input name="submit" id="submit" class="btn btn--primary btn-wide btn--large h-full-width" value="POSLAT ZPRÁVU" type="submit">

    </fieldset>
</form>

